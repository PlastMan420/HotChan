@page "/b/new"

<EditForm Model="@postDialogueDto" OnValidSubmit="Submit">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <InputText @bind-Value="postDialogueDto.name" id="name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <InputText @bind-Value="postDialogueDto.title" id="title" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="flags" class="col-sm-2 col-form-label">Flags</label>
        <div class="col-sm-10">
            <InputText @bind-Value="postDialogueDto.flags" id="flags" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="comment" class="col-sm-2 col-form-label">Comment</label>
        <div class="col-sm-10">
            <InputTextArea @bind-Value="postDialogueDto.comment" id="comment" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="file" class="col-sm-2 col-form-label">Comment</label>
        <InputFile OnChange="OnInputFileChange" id="file" class="form-control" 
            AllowedExtensions=".jpg;.jpeg;.webp;.png;.heif;.avif;.gif;.apng;.webm;.mkv;.mp4;" 
            CustomExtensionMessage="Allowed file types: jpg, png, webp, heic, avif, webm, gif, apng"
            MaxFileSize= FilterByExtension="true"/>
        <p>@status</p>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

